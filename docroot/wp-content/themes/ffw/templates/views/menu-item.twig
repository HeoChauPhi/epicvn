<li class="nav-main-item {{item.classes | join(' ')}} {% if item.current %} active{% endif %}{% if item.get_children %} expanded-menu{% endif %}{% if item_class %}{{ ' ' ~ item_class }}{% endif %}{% if item.mega_menu_options %} mega-menu-item{% endif %}">
  <a class="nav-main-link {% if item_class %}{{ item_class }}{% endif %}" href="{{item.get_link}}">{{item.title}}</a>
  {#{ item|print_r }#}
  {% if item.mega_menu_options %}
    {% if item.products_selecter %}
    {% include 'woo/megamenu-product-item.twig' with {'product_ids': item.products_selecter, 'menu_index': loop.index} only %}
    {% endif %}
  {% elseif item.get_children %}
    <span class="expanded-menu__button hidden-on-desktop js-toggle-menu-expanded"></span>
    {% include 'sub-menu.twig' with {'child': item.get_children} %}
  {% endif %}
</li>
