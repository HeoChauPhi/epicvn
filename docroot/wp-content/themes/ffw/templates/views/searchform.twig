{% block searchform %}
  <div class="block-search">
    <span class="js-toogle--search icon-cross"></span>
    <span class="js-toogle--search icon-search"></span>

    <form class="searchform" role="search" method="get" id="searchform" action="{{ site.url }}/">
      <input class="form-text" type="text" value="{{ fn('get_search_query') }}" name="s" id="s" placeholder="{{ pll_e('Search') }}">
      <button type="submit" id="searchsubmit" value="Search" class="button postfix">{{ pll_e('Search')}}</button>
    </form>
  </div>
{% endblock %}
