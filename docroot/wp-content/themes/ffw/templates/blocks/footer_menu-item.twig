<div class="block-footer-menu {{ field.component_class }}">
  <div class="block--inner">
    <h2 class="block-title">{{ field.footer_title }}</h2>
    <div class="block--content">
      <ul class="footer-menu">
        {% for item in fn('wp_get_nav_menu_items', field.footer_menu_select) %}
          <li class="menu-item"><a href="{{ item.url }}">{{ item.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
