{% extends 'layout.twig' %}

{% block content %}
  <div class="container">
  {% for post in posts %}

    <h1 id="page-title" class="page-title-protected">{{ pll_e('Protected') }}: {{ post.title }}</h1>
    <div class="protected-description">{{ pll_e('This content is password protected. To view it please enter your password below:') }}</div>
    <form action="{{ fn('esc_url', fn('site_url', 'wp-login.php?action=postpass', 'login_post')) }}" method="post" class="form-protected">
      <label for="{{ protected_label }}">{{ pll_e( 'Password:' ) }}</label>
      <input name="post_password" id="{{ protected_label }}" type="password" size="20" maxlength="20" />
      <input type="submit" name="Submit" value="{{ pll_e( 'Submit' ) }}" />
    </form>

  {% endfor %}
  </div>
{% endblock %}
